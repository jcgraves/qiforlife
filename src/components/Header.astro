---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/faq', label: 'FAQ' },
  { href: '/testimonials', label: 'Testimonials' },
  { href: '/new-client-forms', label: 'New Client Forms' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header__container container">
    <a href="/" class="header__logo">
      <img src="/images/logo.svg" alt="Qi For Life Acupuncture Clinic" class="header__logo-image" fetchpriority="high" />
    </a>
    
    <button class="header__mobile-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="header__mobile-toggle-bar"></span>
      <span class="header__mobile-toggle-bar"></span>
      <span class="header__mobile-toggle-bar"></span>
    </button>
    
    <nav class="header__nav" role="navigation" aria-label="Main navigation">
      <ul class="header__nav-list">
        {navItems.map(item => (
          <li class="header__nav-item">
            <a 
              href={item.href} 
              class:list={['header__nav-link', { 'header__nav-link--active': currentPath === item.href }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <a href="/contact" class="header__cta btn btn--primary">Book Now</a>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: var(--color-warm-white);
    box-shadow: var(--shadow-sm);
  }
  
  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-sm);
    padding-bottom: var(--space-sm);
    gap: var(--space-md);
  }
  
  .header__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    flex-shrink: 0;
  }
  
  .header__logo-image {
    height: 60px;
    width: auto;
  }
  
  .header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  
  .header__nav-list {
    display: flex;
    list-style: none;
    gap: var(--space-xs);
    margin: 0;
    padding: 0;
  }
  
  .header__nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-charcoal);
    text-decoration: none;
    transition: color var(--transition-fast);
    position: relative;
  }
  
  .header__nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0.75rem;
    right: 0.75rem;
    height: 2px;
    background-color: var(--color-gold);
    transform: scaleX(0);
    transition: transform var(--transition-medium);
  }
  
  .header__nav-link:hover,
  .header__nav-link--active {
    color: var(--color-burgundy);
  }
  
  .header__nav-link:hover::after,
  .header__nav-link--active::after {
    transform: scaleX(1);
  }
  
  .header__cta {
    flex-shrink: 0;
    padding: 0.625rem 1.25rem;
    font-size: 0.8125rem;
  }
  
  .header__mobile-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 28px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }
  
  .header__mobile-toggle-bar {
    width: 100%;
    height: 2px;
    background-color: var(--color-charcoal);
    transition: all var(--transition-medium);
  }
  
  @media (max-width: 1024px) {
    .header__nav-list {
      gap: 0;
    }
    
    .header__nav-link {
      padding: 0.5rem 0.5rem;
      font-size: 0.8125rem;
    }
  }
  
  @media (max-width: 900px) {
    .header__mobile-toggle {
      display: flex;
    }
    
    .header__nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: var(--color-warm-white);
      padding: 80px var(--space-md) var(--space-md);
      transform: translateX(100%);
      transition: transform var(--transition-medium);
      z-index: 999;
    }
    
    .header__nav.is-open {
      transform: translateX(0);
    }
    
    .header__nav-list {
      flex-direction: column;
      align-items: center;
      gap: var(--space-sm);
    }
    
    .header__nav-link {
      font-size: 1.25rem;
      padding: var(--space-sm);
    }
    
    .header__cta {
      display: none;
    }
    
    .header__mobile-toggle[aria-expanded="true"] .header__mobile-toggle-bar:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    
    .header__mobile-toggle[aria-expanded="true"] .header__mobile-toggle-bar:nth-child(2) {
      opacity: 0;
    }
    
    .header__mobile-toggle[aria-expanded="true"] .header__mobile-toggle-bar:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -7px);
    }
  }
</style>

<script>
  const toggle = document.querySelector('.header__mobile-toggle');
  const nav = document.querySelector('.header__nav');
  
  toggle?.addEventListener('click', () => {
    const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', (!isExpanded).toString());
    nav?.classList.toggle('is-open');
    document.body.style.overflow = isExpanded ? '' : 'hidden';
  });
  
  // Close menu when clicking a link
  nav?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      toggle?.setAttribute('aria-expanded', 'false');
      nav.classList.remove('is-open');
      document.body.style.overflow = '';
    });
  });
</script>
