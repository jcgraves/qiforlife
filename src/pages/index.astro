---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import orchidImage from '../images/Orchid.jpg';
import waitingRoom from '../images/waiting-room.jpg';
import shrineImage from '../images/Qi_For_Life_Shrine.jpg';
import externalVerificationBadge from '../images/external_verification.php.gif';
import chServiceMark from '../images/CH Service Mark With Designation - Transparent.png';
import acServiceMark from '../images/AC Service Mark With Designation - Transparent.png';

// Load content from collections
const hero = await getEntry('home', 'hero');
const intro = await getEntry('home', 'intro');
const conditions = await getEntry('home', 'conditions');
const office = await getEntry('home', 'office');
const featuredTestimonial = await getEntry('home', 'featured-testimonial');
const cta = await getEntry('home', 'cta');
const business = await getEntry('settings', 'business');

// Icon mapping for conditions
const iconMap: Record<string, string> = {
  shield: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>',
  heart: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>',
  stress: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>',
  digestive: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 1 1-6.219-8.56"/><path d="M12 7v5l3 3"/></svg>',
  autoimmune: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>',
  recovery: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"/><path d="M21 3v5h-5"/><path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"/><path d="M8 16H3v5"/></svg>',
  allergies: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17.7 7.7a2.5 2.5 0 1 1 1.8 4.3H2"/><path d="M9.6 4.6A2 2 0 1 1 11 8H2"/><path d="M12.6 19.4A2 2 0 1 0 14 16H2"/></svg>',
  rejuvenation: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M3 5h4"/><path d="M19 17v4"/><path d="M17 19h4"/></svg>',
};
---

<Layout 
  title="Home" 
  description="Dr. Li Zhang offers expert acupuncture and Traditional Chinese Medicine in Brentwood, TN. Over 30 years experience treating pain, fertility, stress, and chronic conditions. Call 615-336-3132."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__background">
      <Image
        src={waitingRoom}
        alt="Qi For Life Acupuncture waiting room"
        widths={[640, 1024, 1920]}
        sizes="100vw"
        width={1920}
        height={1280}
        loading="eager"
        fetchpriority="high"
        format="webp"
        quality={60}
        class="hero__image"
      />
      <div class="hero__overlay"></div>
    </div>
    <div class="hero__content container">
      <div class="hero__text">
        <span class="hero__credentials">{hero?.data.credentials}</span>
        <h1 class="hero__title">{hero?.data.title}</h1>
        <p class="hero__quote">{hero?.data.subtitle}</p>
        <div class="hero__actions">
          <a href={hero?.data.primaryButtonLink} class="btn btn--primary">{hero?.data.primaryButtonText}</a>
          <a href={hero?.data.secondaryButtonLink} class="btn btn--secondary">{hero?.data.secondaryButtonText}</a>
        </div>
      </div>
      <div class="hero__portrait">
        <Image
          src={shrineImage}
          alt="Qi For Life Acupuncture clinic sign - Body, Mind, Spirit for good Health"
          widths={[300, 400, 600]}
          sizes="(max-width: 900px) 300px, 400px"
          width={600}
          height={400}
          loading="eager"
          fetchpriority="high"
          format="webp"
          quality={80}
        />
      </div>
    </div>
    <div class="hero__trust-strip">
      <div class="container">
        <div class="hero__badges">
          <a
            href="http://www.bbb.org/nashville/business-reviews/acupuncturists/qi-for-life-acupuncture-clinic-plc-in-brentwood-tn-37136801#bbbseal"
            title="QI for Life Acupuncture Clinic, PLC is a BBB Accredited Acupuncturist in Brentwood, TN"
            target="_blank"
            rel="noopener noreferrer"
            class="hero__badge"
          >
            <img
              src="https://seal-nashville.bbb.org/logo/ruvtbum/qi-for-life-acupuncture-clinic-plc-37136801.png"
              alt="BBB Accredited Business"
              loading="eager"
            />
          </a>
          <a
            href="https://www.healthprofs.com/us/acupuncturists/qi-for-life-acupuncture-clinic-plc-brentwood-tn/518172"
            title="Qi For Life Acupuncture Clinic, PLC on HealthProfs"
            target="_blank"
            rel="noopener noreferrer"
            class="hero__badge"
          >
            <img
              src={externalVerificationBadge.src}
              alt="HealthProfs Verified"
              loading="eager"
            />
          </a>
          <div class="hero__badge">
            <img
              src={chServiceMark.src}
              alt="CH Service Mark Designation"
              loading="eager"
            />
          </div>
          <div class="hero__badge">
            <img
              src={acServiceMark.src}
              alt="AC Service Mark Designation"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro section section--white">
    <div class="container container--narrow">
      <div class="intro__content text-center">
        <span class="section-label">{intro?.data.sectionLabel}</span>
        <h2>{intro?.data.heading}</h2>
        <div class="divider"></div>
        <p class="intro__text">{intro?.data.text}</p>
      </div>
    </div>
  </section>

  <!-- Conditions Section -->
  <section class="conditions section section--cream">
    <div class="container">
      <div class="section-header">
        <span class="section-label">{conditions?.data.sectionLabel}</span>
        <h2>{conditions?.data.heading}</h2>
        <p>{conditions?.data.subheading}</p>
      </div>

      <div class="conditions__grid">
        {conditions?.data.cards.map((card: { title: string; description: string; icon: string }) => (
          <div class="condition-card">
            <div class="condition-card__icon">
              <Fragment set:html={iconMap[card.icon] || iconMap.shield} />
            </div>
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        ))}
      </div>

      <div class="conditions__cta text-center">
        <a href="/services" class="btn btn--primary">View All Services</a>
      </div>
    </div>
  </section>

  <!-- Office Section -->
  <section class="office section section--white">
    <div class="container">
      <div class="office__grid">
        <div class="office__content">
          <span class="section-label">{office?.data.sectionLabel}</span>
          <h2>{office?.data.heading}</h2>
          <div class="divider divider--left"></div>
          <p>{office?.data.paragraph1}</p>
          <p>{office?.data.paragraph2}</p>
          <a href={office?.data.buttonLink} class="btn btn--secondary">{office?.data.buttonText}</a>
        </div>
        <div class="office__image">
          <Image
            src={orchidImage}
            alt="Red orchid with Chinese calligraphy - representing Traditional Chinese Medicine"
            widths={[400, 600, 800]}
            sizes="(max-width: 900px) 100vw, 50vw"
            width={800}
            height={533}
            loading="lazy"
            format="webp"
            quality={70}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Preview -->
  <section class="testimonials-preview section section--sage">
    <div class="container container--narrow">
      <div class="section-header">
        <span class="section-label" style="color: var(--color-cream);">{featuredTestimonial?.data.sectionLabel}</span>
        <h2>{featuredTestimonial?.data.heading}</h2>
      </div>

      <div class="testimonial-featured">
        <blockquote class="testimonial-featured__quote">
          "{featuredTestimonial?.data.quote}"
        </blockquote>
        <cite class="testimonial-featured__cite">â€” {featuredTestimonial?.data.author}</cite>
      </div>

      <div class="testimonials-preview__cta text-center">
        <a href="/testimonials" class="btn btn--gold">{featuredTestimonial?.data.buttonText}</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta section section--cream">
    <div class="container container--narrow text-center">
      <h2>{cta?.data.heading}</h2>
      <p class="cta__text">{cta?.data.text}</p>
      <div class="cta__actions">
        <a href="/contact" class="btn btn--primary">{cta?.data.primaryButtonText}</a>
        <a href={`tel:+1${business?.data.phone.replace(/-/g, '')}`} class="btn btn--secondary">{cta?.data.secondaryButtonText}</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(44, 62, 45, 0.92) 0%,
      rgba(44, 62, 45, 0.85) 50%,
      rgba(44, 62, 45, 0.7) 100%
    );
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
    padding-top: var(--space-2xl);
    padding-bottom: calc(var(--space-3xl) + 70px);
  }
  
  .hero__title {
    font-size: clamp(3rem, 6vw, 4.5rem);
    color: var(--color-warm-white);
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .hero__credentials {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--color-gold);
    margin-bottom: var(--space-sm);
  }

  .hero__quote {
    font-size: 1.25rem;
    color: rgba(250, 248, 245, 0.9);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
    max-width: 500px;
  }
  
  .hero__actions {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
  
  .hero__actions .btn--secondary {
    color: var(--color-warm-white);
    border-color: var(--color-warm-white);
  }
  
  .hero__actions .btn--secondary:hover {
    background-color: var(--color-warm-white);
    color: var(--color-charcoal);
  }
  
  .hero__portrait {
    display: flex;
    justify-content: center;
  }
  
  .hero__portrait img {
    max-width: 480px;
    width: 100%;
    border-radius: 4px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .hero__trust-strip {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
    background: rgba(44, 62, 45, 0.5);
    backdrop-filter: blur(4px);
    padding: var(--space-xs) 0;
    border-top: 1px solid rgba(196, 169, 98, 0.3);
  }

  .hero__trust-strip .hero__badges {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .hero__trust-strip .hero__badge {
    display: flex;
    align-items: center;
    opacity: 0.9;
    transition: opacity var(--transition-fast), transform var(--transition-fast);
  }

  .hero__trust-strip a.hero__badge:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  .hero__trust-strip .hero__badge img {
    height: auto;
    max-height: 70px;
    width: auto;
    filter: brightness(1.1);
  }

  @media (max-width: 900px) {
    .hero__content {
      grid-template-columns: 1fr;
      text-align: center;
      padding-bottom: calc(var(--space-2xl) + 50px);
    }

    .hero__quote {
      margin-left: auto;
      margin-right: auto;
    }

    .hero__actions {
      justify-content: center;
    }

    .hero__portrait {
      order: -1;
    }

    .hero__portrait img {
      max-width: 340px;
    }

    .hero__trust-strip {
      padding: var(--space-xs) 0;
    }

    .hero__trust-strip .hero__badges {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-sm);
      justify-items: center;
    }

    .hero__trust-strip .hero__badge img {
      max-height: 36px;
    }
  }
  
  /* Intro Section */
  .intro__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-warm-gray);
  }
  
  /* Conditions Section */
  .conditions__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }
  
  .condition-card {
    background: var(--color-warm-white);
    padding: var(--space-lg);
    border-radius: 4px;
    text-align: center;
    transition: all var(--transition-medium);
    box-shadow: var(--shadow-sm);
  }
  
  .condition-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .condition-card__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-sage-light) 0%, var(--color-sage) 100%);
    border-radius: 50%;
    color: var(--color-warm-white);
  }
  
  .condition-card h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-xs);
  }
  
  .condition-card p {
    font-size: 0.9375rem;
    color: var(--color-warm-gray);
    line-height: 1.6;
  }
  
  @media (max-width: 1024px) {
    .conditions__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 640px) {
    .conditions__grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Office Section */
  .office__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }
  
  .office__content p {
    color: var(--color-warm-gray);
    margin-bottom: var(--space-md);
  }
  
  .office__image img {
    border-radius: 4px;
    box-shadow: var(--shadow-lg);
  }
  
  @media (max-width: 900px) {
    .office__grid {
      grid-template-columns: 1fr;
    }
    
    .office__image {
      order: -1;
    }
  }
  
  /* Testimonials Preview */
  .testimonial-featured {
    text-align: center;
    margin-bottom: var(--space-xl);
  }
  
  .testimonial-featured__quote {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    font-style: italic;
    line-height: 1.7;
    color: var(--color-cream);
    margin-bottom: var(--space-md);
    position: relative;
    padding: 0 var(--space-xl);
  }
  
  .testimonial-featured__quote::before {
    content: '"';
    font-size: 4rem;
    position: absolute;
    top: -1rem;
    left: 0;
    color: var(--color-gold);
    font-family: var(--font-display);
    line-height: 1;
  }
  
  .testimonial-featured__cite {
    font-style: normal;
    font-weight: 500;
    color: var(--color-gold-light);
  }
  
  /* CTA Section */
  .cta__text {
    font-size: 1.125rem;
    color: var(--color-warm-gray);
    max-width: 600px;
    margin: var(--space-md) auto var(--space-xl);
  }

  .cta__actions {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
</style>
