---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

// Load page content from collections
const hero = await getEntry('testimonials-page', 'hero');
const categoriesData = await getEntry('testimonials-page', 'categories');
const disclaimer = await getEntry('testimonials-page', 'disclaimer');
const cta = await getEntry('testimonials-page', 'cta');

// Load all testimonials and group by category
const allTestimonials = await getCollection('testimonials');

// Group testimonials by category
const testimonialsByCategory: Record<string, typeof allTestimonials> = {};
for (const testimonial of allTestimonials) {
  const category = testimonial.data.category;
  if (!testimonialsByCategory[category]) {
    testimonialsByCategory[category] = [];
  }
  testimonialsByCategory[category].push(testimonial);
}

// Sort each category by order
for (const category of Object.keys(testimonialsByCategory)) {
  testimonialsByCategory[category].sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
}
---

<Layout
  title="Testimonials"
  description="Read what patients say about their experience with Dr. Li Zhang at Qi For Life Acupuncture in Brentwood, TN. Real stories of healing from fertility, pain, chronic conditions, and more."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">{hero?.data.sectionLabel}</span>
      <h1>{hero?.data.title}</h1>
      <p class="page-hero__subtitle">{hero?.data.subtitle}</p>
    </div>
  </section>

  <!-- Category Navigation -->
  <section class="category-nav">
    <div class="container">
      <nav class="category-nav__list" aria-label="Testimonial categories">
        {categoriesData?.data.categories.map((cat: { id: string; title: string }) => (
          <a href={`#${cat.id}`} class="category-nav__item">
            {cat.title}
          </a>
        ))}
      </nav>
    </div>
  </section>

  <!-- Testimonials Content -->
  <section class="testimonials-main section section--white">
    <div class="container">
      {categoriesData?.data.categories.map(async (category: { id: string; title: string }) => {
        const categoryTestimonials = testimonialsByCategory[category.id] || [];
        return (
          <div class="testimonial-category" id={category.id}>
            <h2 class="category-title">{category.title}</h2>
            <div class="divider divider--left"></div>

            <div class="testimonials-grid">
              {categoryTestimonials.map(async (testimonial) => {
                const { Content } = await testimonial.render();
                return (
                  <details class="testimonial-card">
                    <summary class="testimonial-card__summary">
                      <div class="testimonial-card__header">
                        <span class="testimonial-card__name">{testimonial.data.name}</span>
                        <span class="testimonial-card__toggle">+</span>
                      </div>
                      <p class="testimonial-card__excerpt">"{testimonial.data.excerpt}"</p>
                    </summary>
                    <div class="testimonial-card__content">
                      <Content />
                    </div>
                  </details>
                );
              })}
            </div>
          </div>
        );
      })}

      <div class="testimonials-note">
        <p>{disclaimer?.data.text}</p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta section section--sage">
    <div class="container container--narrow text-center">
      <h2>{cta?.data.heading}</h2>
      <p class="cta__text">{cta?.data.text}</p>
      <a href="/contact" class="btn btn--gold">{cta?.data.buttonText}</a>
    </div>
  </section>
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background-color: var(--color-charcoal);
    color: var(--color-warm-white);
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }
  
  .page-hero h1 {
    color: var(--color-warm-white);
    margin-bottom: var(--space-xs);
  }
  
  .page-hero__subtitle {
    font-size: 1.125rem;
    color: var(--color-gold);
    font-weight: 500;
    letter-spacing: 0.05em;
  }
  
  /* Category Navigation */
  .category-nav {
    background: var(--color-cream);
    padding: var(--space-md) 0;
    position: sticky;
    top: 76px;
    z-index: 100;
    box-shadow: var(--shadow-sm);
  }
  
  .category-nav__list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    justify-content: center;
  }
  
  .category-nav__item {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-charcoal);
    text-decoration: none;
    border-radius: 2px;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }
  
  .category-nav__item:hover {
    background: var(--color-sage);
    color: var(--color-warm-white);
  }
  
  /* Testimonial Categories */
  .testimonial-category {
    margin-bottom: var(--space-3xl);
    scroll-margin-top: 140px;
  }
  
  .testimonial-category:last-of-type {
    margin-bottom: var(--space-xl);
  }
  
  .category-title {
    font-size: 1.75rem;
    margin-bottom: var(--space-xs);
  }
  
  /* Testimonials Grid */
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }
  
  @media (max-width: 900px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Testimonial Card */
  .testimonial-card {
    background: var(--color-cream);
    border-radius: 4px;
    overflow: hidden;
    transition: box-shadow var(--transition-medium);
  }
  
  .testimonial-card:hover {
    box-shadow: var(--shadow-md);
  }
  
  .testimonial-card__summary {
    padding: var(--space-md);
    cursor: pointer;
    list-style: none;
  }
  
  .testimonial-card__summary::-webkit-details-marker {
    display: none;
  }
  
  .testimonial-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }
  
  .testimonial-card__name {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-charcoal);
  }
  
  .testimonial-card__toggle {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gold);
    color: var(--color-charcoal);
    border-radius: 50%;
    font-size: 1.25rem;
    font-weight: 300;
    transition: transform var(--transition-medium);
  }
  
  .testimonial-card[open] .testimonial-card__toggle {
    transform: rotate(45deg);
  }
  
  .testimonial-card__excerpt {
    font-family: var(--font-display);
    font-style: italic;
    color: var(--color-warm-gray);
    line-height: 1.6;
    margin: 0;
  }
  
  .testimonial-card__content {
    padding: 0 var(--space-md) var(--space-md);
    border-top: 1px solid rgba(44, 62, 45, 0.1);
    margin-top: var(--space-sm);
    padding-top: var(--space-md);
  }
  
  .testimonial-card__content p {
    color: var(--color-charcoal);
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }
  
  .testimonial-card__content p:last-child {
    margin-bottom: 0;
  }
  
  /* Testimonials Note */
  .testimonials-note {
    margin-top: var(--space-2xl);
    padding: var(--space-md);
    background: rgba(122, 139, 110, 0.1);
    border-radius: 4px;
  }
  
  .testimonials-note p {
    font-size: 0.875rem;
    color: var(--color-warm-gray);
    text-align: center;
    margin: 0;
  }
  
  /* CTA */
  .cta__text {
    font-size: 1.125rem;
    max-width: 500px;
    margin: var(--space-md) auto var(--space-xl);
  }
  
  /* Mobile adjustments */
  @media (max-width: 640px) {
    .category-nav {
      padding: var(--space-sm) 0;
    }
    
    .category-nav__list {
      gap: 0.25rem;
    }
    
    .category-nav__item {
      padding: 0.375rem 0.75rem;
      font-size: 0.75rem;
    }
  }
</style>

<script>
  // Smooth scroll for category navigation
  document.querySelectorAll('.category-nav__item').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href').slice(1);
      const target = document.getElementById(targetId);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth' });
      }
    });
  });
</script>
