---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Load new client forms page content
const hero = await getEntry('new-client-forms', 'hero');
const intro = await getEntry('new-client-forms', 'intro');
const formsData = await getEntry('new-client-forms', 'forms');
const whatToBring = await getEntry('new-client-forms', 'what-to-bring');
const preparation = await getEntry('new-client-forms', 'preparation');
const cta = await getEntry('new-client-forms', 'cta');

// Form icons
const formIcons = [
  '<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>',
  '<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>'
];
---

<Layout
  title="New Client Forms"
  description="Download and complete patient intake forms before your first visit to Qi For Life Acupuncture in Brentwood, TN. Patient intake form and treatment authorization."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">{hero?.data.sectionLabel}</span>
      <h1>{hero?.data.title}</h1>
      <p class="page-hero__subtitle">{hero?.data.subtitle}</p>
    </div>
  </section>

  <!-- Forms Content -->
  <section class="forms-main section section--white">
    <div class="container container--narrow">
      <div class="forms-intro">
        <p>{intro?.data.introText}</p>

        <div class="forms-notice">
          <strong>Cancellation Policy:</strong> {intro?.data.cancellationPolicy}
        </div>
      </div>

      <div class="forms-grid">
        {formsData?.data.forms.map((form: { title: string; description: string; filePath: string }, index: number) => (
          <div class="form-card">
            <div class="form-card__icon">
              <Fragment set:html={formIcons[index] || formIcons[0]} />
            </div>
            <h3>{form.title}</h3>
            <p>{form.description}</p>
            <a href={form.filePath} class="btn btn--primary" target="_blank" rel="noopener">
              Download Form (PDF)
            </a>
          </div>
        ))}
      </div>

      <div class="forms-instructions">
        <h2>{whatToBring?.data.heading}</h2>
        <div class="divider divider--left"></div>
        <ul>
          {whatToBring?.data.items.map((item: string) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- Preparation Tips -->
  <section class="preparation section section--cream">
    <div class="container container--narrow">
      <div class="section-header">
        <span class="section-label">{preparation?.data.sectionLabel}</span>
        <h2>{preparation?.data.heading}</h2>
      </div>

      <div class="prep-list">
        {preparation?.data.steps.map((step: { title: string; description: string }, index: number) => (
          <div class="prep-item">
            <span class="prep-item__number">{index + 1}</span>
            <div class="prep-item__content">
              <h3>{step.title}</h3>
              <p>{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta section section--sage">
    <div class="container container--narrow text-center">
      <h2>{cta?.data.heading}</h2>
      <p class="cta__text">{cta?.data.text}</p>
      <a href="/contact" class="btn btn--gold">{cta?.data.buttonText}</a>
    </div>
  </section>
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background-color: var(--color-charcoal);
    color: var(--color-warm-white);
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }
  
  .page-hero h1 {
    color: var(--color-warm-white);
    margin-bottom: var(--space-xs);
  }
  
  .page-hero__subtitle {
    font-size: 1.125rem;
    color: var(--color-gold);
    font-weight: 500;
    letter-spacing: 0.05em;
  }
  
  /* Forms Intro */
  .forms-intro {
    margin-bottom: var(--space-2xl);
  }
  
  .forms-intro > p {
    font-size: 1.125rem;
    color: var(--color-warm-gray);
    margin-bottom: var(--space-lg);
  }
  
  .forms-notice {
    background: rgba(196, 169, 98, 0.15);
    border-left: 4px solid var(--color-gold);
    padding: var(--space-md);
    color: var(--color-charcoal);
  }
  
  .forms-notice strong {
    color: var(--color-burgundy);
  }
  
  /* Forms Grid */
  .forms-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }
  
  @media (max-width: 640px) {
    .forms-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .form-card {
    background: var(--color-cream);
    padding: var(--space-xl);
    border-radius: 4px;
    text-align: center;
  }
  
  .form-card__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-warm-white);
    border-radius: 50%;
    color: var(--color-sage);
  }
  
  .form-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
  }
  
  .form-card p {
    color: var(--color-warm-gray);
    margin-bottom: var(--space-lg);
  }
  
  /* Forms Instructions */
  .forms-instructions h2 {
    font-size: 1.5rem;
    margin-bottom: var(--space-xs);
  }
  
  .forms-instructions ul {
    list-style: none;
    padding: 0;
    margin: var(--space-lg) 0 0 0;
  }
  
  .forms-instructions li {
    padding: var(--space-sm) 0;
    padding-left: var(--space-lg);
    position: relative;
    color: var(--color-warm-gray);
    border-bottom: 1px solid rgba(44, 62, 45, 0.1);
  }
  
  .forms-instructions li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-sage);
    font-weight: bold;
  }
  
  /* Preparation List */
  .prep-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .prep-item {
    display: flex;
    gap: var(--space-lg);
    align-items: flex-start;
  }
  
  .prep-item__number {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gold);
    color: var(--color-charcoal);
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    border-radius: 50%;
  }
  
  .prep-item__content h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-xs);
  }
  
  .prep-item__content p {
    color: var(--color-warm-gray);
    margin: 0;
  }
  
  /* CTA */
  .cta__text {
    font-size: 1.125rem;
    max-width: 500px;
    margin: var(--space-md) auto var(--space-xl);
  }
</style>
