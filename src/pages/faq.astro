---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

// Load FAQ page content
const hero = await getEntry('faq-page', 'hero');
const conditionsData = await getEntry('faq-page', 'conditions');
const cta = await getEntry('faq-page', 'cta');

// Load FAQ items and sort by order
const faqItems = await getCollection('faq');
const sortedFaqs = faqItems.sort((a, b) => a.data.order - b.data.order);
---

<Layout
  title="FAQ"
  description="Frequently asked questions about acupuncture and Traditional Chinese Medicine at Qi For Life in Brentwood, TN. Learn about treatments, what to expect, and conditions treated."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">{hero?.data.sectionLabel}</span>
      <h1>{hero?.data.title}</h1>
      <p class="page-hero__subtitle">{hero?.data.subtitle}</p>
    </div>
  </section>

  <!-- FAQ Content -->
  <section class="faq-main section section--white">
    <div class="container container--narrow">
      <div class="faq-list">
        {sortedFaqs.map(async (faq, index) => {
          const { Content } = await faq.render();
          return (
            <details class="faq-item" open={index === 0}>
              <summary class="faq-question">{faq.data.question}</summary>
              <div class="faq-answer">
                {faq.data.answer ? (
                  <p set:html={faq.data.answer.replace(/\n\n/g, '</p><p>').replace(/\n/g, '<br/>')} />
                ) : (
                  <Content />
                )}
              </div>
            </details>
          );
        })}

        <!-- Conditions as accordion item -->
        <details class="faq-item">
          <summary class="faq-question">What conditions can be treated by Chinese medicine and acupuncture?</summary>
          <div class="faq-answer">
            <p class="conditions-intro">
              Acupuncture can effectively treat a wide array of acute and chronic diseases and health conditions
              and provide preventative care. Here are commonly treated conditions:
            </p>

            <div class="conditions-grid">
              {conditionsData?.data.categories.map((category: { name: string; conditions: string[] }) => (
                <div class="condition-category">
                  <h4>{category.name}</h4>
                  <ul>
                    {category.conditions.map((condition: string) => (
                      <li>{condition}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta section section--sage">
    <div class="container container--narrow text-center">
      <h2>{cta?.data.heading}</h2>
      <p class="cta__text">{cta?.data.text}</p>
      <a href="/contact" class="btn btn--gold">{cta?.data.buttonText}</a>
    </div>
  </section>
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background-color: var(--color-charcoal);
    color: var(--color-warm-white);
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }

  .page-hero h1 {
    color: var(--color-warm-white);
    margin-bottom: var(--space-xs);
  }

  .page-hero__subtitle {
    font-size: 1.125rem;
    color: var(--color-gold);
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  /* FAQ List */
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .faq-item {
    background: var(--color-cream);
    border-radius: 4px;
    overflow: hidden;
  }

  .faq-question {
    padding: var(--space-md) var(--space-lg);
    cursor: pointer;
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-charcoal);
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color var(--transition-fast);
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-gold);
    transition: transform var(--transition-medium);
  }

  .faq-item[open] .faq-question::after {
    transform: rotate(45deg);
  }

  .faq-question:hover {
    background-color: var(--color-cream-dark);
  }

  .faq-answer {
    padding: 0 var(--space-lg) var(--space-lg);
    border-top: 1px solid rgba(44, 62, 45, 0.1);
  }

  .faq-answer :global(p) {
    color: var(--color-warm-gray);
    line-height: 1.7;
  }

  /* Conditions Grid (inside accordion) */
  .conditions-intro {
    color: var(--color-warm-gray);
    margin-bottom: var(--space-lg);
    line-height: 1.7;
  }

  .conditions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  @media (max-width: 768px) {
    .conditions-grid {
      grid-template-columns: 1fr;
    }
  }

  .condition-category h4 {
    font-size: 0.875rem;
    font-family: var(--font-body);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--color-sage-dark);
    margin-bottom: var(--space-sm);
    padding-bottom: var(--space-xs);
    border-bottom: 2px solid var(--color-gold);
  }

  .condition-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .condition-category li {
    font-size: 0.9375rem;
    color: var(--color-warm-gray);
    padding: 0.25rem 0;
    padding-left: 1rem;
    position: relative;
  }

  .condition-category li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--color-sage);
  }

  /* CTA */
  .cta__text {
    font-size: 1.125rem;
    max-width: 500px;
    margin: var(--space-md) auto var(--space-xl);
  }
</style>
