---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getEntry } from 'astro:content';
import drZhangHeadshot from '../images/dr-zhang-headshot.jpg';

// Load about page content
const hero = await getEntry('about', 'hero');
const bio = await getEntry('about', 'bio');
const timeline = await getEntry('about', 'timeline');
const specialties = await getEntry('about', 'specialties');
const publications = await getEntry('about', 'publications');
const testimonials = await getEntry('about', 'testimonials');
const cta = await getEntry('about', 'cta');
---

<Layout
  title="About Dr. Li Zhang"
  description="Learn about Dr. Li Zhang, licensed acupuncturist with over 30 years of experience. Trained at top Chinese medicine schools, she brings elite expertise to Brentwood, TN."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">{hero?.data.sectionLabel}</span>
      <h1>{hero?.data.title}</h1>
      <p class="page-hero__subtitle">{hero?.data.subtitle}</p>
    </div>
  </section>

  <!-- About Content -->
  <section class="about-content section section--white">
    <div class="container">
      <div class="about-content__grid">
        <div class="about-content__image">
          <Image
            src={drZhangHeadshot}
            alt="Dr. Li Zhang, Licensed Acupuncturist"
            widths={[300, 400, 600]}
            sizes="(max-width: 900px) 350px, 400px"
            width={600}
            height={600}
            loading="eager"
            format="webp"
            quality={80}
          />
        </div>
        <div class="about-content__text">
          <h2>{bio?.data.heading}</h2>
          <div class="divider divider--left"></div>

          {bio?.data.paragraphs.map((paragraph: string) => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Background Section -->
  <section class="background section section--cream">
    <div class="container container--narrow">
      <h2 class="text-center">{timeline?.data.sectionHeading}</h2>
      <div class="divider"></div>

      <div class="timeline">
        {timeline?.data.items.map((item: { title: string; description: string }) => (
          <div class="timeline__item">
            <div class="timeline__marker"></div>
            <div class="timeline__content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Specialties Section -->
  <section class="specialties section section--white">
    <div class="container">
      <div class="section-header">
        <span class="section-label">{specialties?.data.sectionLabel}</span>
        <h2>{specialties?.data.heading}</h2>
        <p>{specialties?.data.subheading}</p>
      </div>

      <div class="specialties__grid">
        {specialties?.data.cards.map((card: { title: string; description: string }) => (
          <div class="specialty-card">
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Publications Section -->
  <section class="publications section section--sage">
    <div class="container container--narrow text-center">
      <h2>{publications?.data.heading}</h2>
      <div class="divider"></div>
      <p class="publications__text">
        {publications?.data.text}
      </p>
      <a href={publications?.data.buttonLink} target="_blank" rel="noopener noreferrer" class="btn btn--gold">
        {publications?.data.buttonText}
      </a>
    </div>
  </section>

  <!-- Testimonials Preview -->
  <section class="testimonials-preview section section--cream">
    <div class="container container--narrow">
      <div class="section-header">
        <span class="section-label">{testimonials?.data.sectionLabel}</span>
        <h2>{testimonials?.data.heading}</h2>
      </div>

      <div class="testimonial-cards">
        {testimonials?.data.items.map((item: { quote: string; author: string }) => (
          <blockquote class="testimonial-card">
            <p>"{item.quote}"</p>
            <cite>â€” {item.author}</cite>
          </blockquote>
        ))}
      </div>

      <div class="text-center mt-xl">
        <a href="/testimonials" class="btn btn--primary">Read More Testimonials</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta section section--white">
    <div class="container container--narrow text-center">
      <h2>{cta?.data.heading}</h2>
      <p class="cta__text">{cta?.data.text}</p>
      <a href="/contact" class="btn btn--primary">{cta?.data.buttonText}</a>
    </div>
  </section>
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    background-color: var(--color-charcoal);
    color: var(--color-warm-white);
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }
  
  .page-hero h1 {
    color: var(--color-warm-white);
    margin-bottom: var(--space-xs);
  }
  
  .page-hero__subtitle {
    font-size: 1.125rem;
    color: var(--color-gold);
    font-weight: 500;
    letter-spacing: 0.05em;
  }
  
  /* About Content */
  .about-content__grid {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }
  
  .about-content__image img {
    width: 100%;
    border-radius: 4px;
    box-shadow: var(--shadow-lg);
  }
  
  .about-content__text h2 {
    margin-bottom: var(--space-xs);
  }
  
  .about-content__text p {
    color: var(--color-warm-gray);
    margin-bottom: var(--space-md);
  }
  
  @media (max-width: 900px) {
    .about-content__grid {
      grid-template-columns: 1fr;
    }
    
    .about-content__image {
      max-width: 350px;
      margin: 0 auto;
    }
  }
  
  /* Timeline */
  .timeline {
    margin-top: var(--space-2xl);
    position: relative;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--color-gold), var(--color-sage));
  }
  
  .timeline__item {
    position: relative;
    padding-left: var(--space-2xl);
    padding-bottom: var(--space-xl);
  }
  
  .timeline__item:last-child {
    padding-bottom: 0;
  }
  
  .timeline__marker {
    position: absolute;
    left: 6px;
    top: 4px;
    width: 20px;
    height: 20px;
    background: var(--color-gold);
    border-radius: 50%;
    border: 3px solid var(--color-cream);
  }
  
  .timeline__content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-xs);
    color: var(--color-charcoal);
  }
  
  .timeline__content p {
    color: var(--color-warm-gray);
    margin: 0;
  }
  
  /* Specialties */
  .specialties__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }
  
  .specialty-card {
    background: var(--color-cream);
    padding: var(--space-lg);
    border-radius: 4px;
    border-left: 4px solid var(--color-gold);
  }
  
  .specialty-card h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-sm);
  }
  
  .specialty-card p {
    color: var(--color-warm-gray);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .specialties__grid {
      grid-template-columns: 1fr;
    }
  }
  
  /* Publications */
  .publications__text {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: var(--space-xl);
  }
  
  /* Testimonial Cards */
  .testimonial-cards {
    display: grid;
    gap: var(--space-lg);
  }
  
  .testimonial-card {
    background: var(--color-warm-white);
    padding: var(--space-lg);
    border-radius: 4px;
    box-shadow: var(--shadow-sm);
    border-left: 4px solid var(--color-gold);
  }
  
  .testimonial-card p {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-style: italic;
    line-height: 1.7;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
  }
  
  .testimonial-card cite {
    font-style: normal;
    font-weight: 500;
    color: var(--color-sage-dark);
  }
  
  /* CTA */
  .cta__text {
    font-size: 1.125rem;
    color: var(--color-warm-gray);
    max-width: 500px;
    margin: var(--space-md) auto var(--space-xl);
  }
</style>
